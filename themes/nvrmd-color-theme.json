    // === MARKDOWN SUPPORT ===
    {
      "name": "Markdown - Plain", // MARKDOWN TEXT BIASA
      "scope": [
        "text.html.markdown",
        "punctuation.definition.list_item.markdown"
      ],
      "settings": {
        "foreground": "#FFF" // Putih
      }
    },
    {
      "name": "Markdown - Markup Raw Inline", // MARKDOWN INLINE CODE
      "scope": ["text.html.markdown markup.inline.raw.markdown"],
      "settings": {
        "foreground": "#4A9EFF" // Ungu
      }
    },
    {
      "name": "Markdown - Markup Raw Inline Punctuation", // MARKDOWN CODE TICKS
      "scope": [
        "text.html.markdown markup.inline.raw.markdown punctuation.definition.raw.markdown"
      ],
      "settings": {
        "foreground": "#666" // Abu-abu
      }
    },
    {
      "name": "Markdown - Heading", // MARKDOWN HEADING (# ## ###)
      "scope": [
        "markdown.heading",
        "markup.heading | markup.heading entity.name",
        "markup.heading.markdown punctuation.definition.heading.markdown"
      ],
      "settings": {
        "foreground": "#FFF", // Hijau
        "fontStyle": "bold" // Tebal
      }
    },
    {
      "name": "Markup - Italic", // MARKDOWN ITALIC
      "scope": ["markup.italic"],
      "settings": {
        "fontStyle": "italic", // Miring
        "foreground": "#FFF" // Pink
      }
    },
    {
      "name": "Markup - Bold", // MARKDOWN BOLD
      "scope": ["markup.bold", "markup.bold string"],
      "settings": {
        "fontStyle": "bold", // Tebal
        "foreground": "#FFF" // Pink
      }
    },
    {
      "name": "Markup - Bold-Italic", // MARKDOWN BOLD + ITALIC
      "scope": [
        "markup.bold markup.italic",
        "markup.italic markup.bold",
        "markup.quote markup.bold",
        "markup.bold markup.italic string",
